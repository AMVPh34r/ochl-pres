html, body {
	margin: 0;
	padding: 0;
	background: #222;
}

.slide:hover{
	cursor: pointer;
}

.content-frame .content{
	max-width: 100%;
	max-height: 100%;
	margin: auto;
}

.content-frame .content h2 {
	font-size:3em;
	margin-bottom:15px;
}

.content-frame .content p {
	font-size:1.25em;
	text-indent:30px;
}

.mainvideo {
	display: none;
	max-width: 100%;
	margin: auto;
	position: fixed;
}

.mainvideo-first {
	display: block;
}